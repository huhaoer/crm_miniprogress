<view class="container">
    <view class="base_info">基础信息</view>
    <!-- 合同表单填写 -->
    <view class="wrapper">
        <van-cell-group>
            <!-- 合同名 -->
            <van-field value="{{ contract_name_val }}" clearable label="合同名：" border="{{ true }}" bind:input="contractNameInp" />
            <!-- 所属项目 -->
            <van-cell title="所属项目：" is-link bind:click="showItemMenu" value="{{ contract_item_val }}" />
            <van-picker show-toolbar title="选择项目" columns="{{ columns }}" bind:cancel="cancelItemMenu" bind:confirm="confirmItemMenu" wx:if="{{ is_show_item }}" loading="{{ loading }}" />
            <!-- 合同编号 -->
            <van-field value="{{ contract_id_val }}" label="合同编号" clearable border="{{ true }}" error-message="" bind:input="contractIdInp" />
            <!-- 父合同编号 -->
            <van-cell title="父合同编号：" is-link bind:click="showParentMenu" value="{{ contract_parent_val }}" />
            <van-picker show-toolbar title="选择父合同" columns="{{ columns2 }}" bind:cancel="cancelParentMenu" bind:confirm="confirmParentMenu" wx:if="{{ is_show_parent }}" loading="{{ loading2 }}" />
            <!-- 合同分类 -->
            <van-cell title="合同分类" is-link bind:click="showTypeMenu" value="{{ contract_kind_val }}" />
            <van-action-sheet show="{{ is_show_type }}" actions="{{ contract_kind_arr }}" bind:close="closeTypeMenu" bind:select="selectTypeMenu" overlay="{{true}}" close-on-click-overlay="{{false}}" safe-area-inset-bottom="{{false}}" title="选择合同分类" />
            <!-- 合同金额 -->
            <van-field value="{{  }}" label="合同金额" type="number" autosize clearable border="{{ true }}" error-message="" bind:input="contractPriceInp" />
            <!-- 签订时间 -->
            <van-cell title="签订时间" is-link bind:click="showStartMenu" value="{{ contract_start_val }}" />
            <van-datetime-picker type="date" bind:confirm="confirmStart" bind:cancel="cancelStart" min-date="{{ minDate }}" formatter="{{ formatter }}" wx:if="{{ is_show_start }}" />
            <!-- 到期时间 -->
            <van-cell title="到期时间" is-link bind:click="showStopMenu" value="{{ contract_stop_val }}" />
            <van-datetime-picker type="date" bind:confirm="confirmStop" bind:cancel="cancelStop" min-date="{{ minDate }}" formatter="{{ formatter }}" wx:if="{{ is_show_stop }}" />
            <!-- 合同备注 -->
            <van-field value="{{ contract_remark_val }}" label="合同备注" autosize clearable border="{{ true }}" error-message="" bind:input="contractRemarkInp" />
        </van-cell-group>
    </view>
    <view class="parse_info">
        <view class="show_parse_info">阶段信息</view>
        <!-- <view class="add_parse_info">
            
        </view> -->
    </view>
    <view class="wrapper">
        <!-- addPhase(String token, 
            String ContractCode, 
            String PhaseId,
             String PhaseDescribe, 1
             Date PhasePlanTime, 1
             int PhaseType, 1
             double PhaseAmount, 1
            Date PhaseFactTime) -->
        <block wx:for="{{ parseList }}" wx:key="index">
            <van-cell-group custom-class="cell_root_class">
                <!-- 阶段描述 -->
                <van-field 
                    value="{{ item.parse_desc }}" 
                    clearable 
                    label="阶段描述" 
                    border="{{ true }}" 
                    bind:input="onParseDesc" 
                    data-index="{{ index }}"
                    data-field="parse_desc"
                />
                <!-- 阶段类型 -->
                <van-cell 
                    title="阶段类型" 
                    is-link 
                    bind:click="onParseType" 
                    value="{{ item.parse_type }}" 
                    data-showindex="{{ index }}"
                />
                <van-picker 
                    show-toolbar 
                    title="选择阶段类型" 
                    columns="{{ parse_type_arrShow }}" 
                    bind:cancel="cancelParseType" 
                    bind:confirm="confirmParseType" 
                    wx:if="{{ item.now_showType_index }}"
                    data-index="{{ index }}"
                    data-field="parse_type"
                />
                <!-- 阶段总金额 -->
                <van-field 
                    value="{{ item.parse_total }}" 
                    label="总金额" 
                    clearable 
                    border="{{ true }}"
                    type="digit"
                    bind:input="onParseTotal" 
                    data-index="{{ index }}"
                    data-field="parse_total"
                />
                <!-- 签订时间 -->
                <van-cell 
                    title="计划时间" 
                    is-link 
                    bind:click="onParseTime" 
                    value="{{ item.parse_time }}" 
                    data-showindex="{{ index }}"
                />
                <van-datetime-picker 
                    type="date" 
                    bind:confirm="confirmParseTime" 
                    bind:cancel="cancelParseTime" 
                    min-date="{{ minDate }}" 
                    formatter="{{ formatter }}" 
                    wx:if="{{ item.now_showTime_index }}" 
                    data-index="{{ index }}"
                    data-field="parse_time"
                />
            </van-cell-group>
            <view class="delete_now_parse">
                <van-button 
                    icon="close" 
                    type="primary"
                    size="mini"
                    color="#919191"
                    block
                    bind:click="cancelOneParse"
                    data-index="{{ index }}"
                ></van-button>
            </view>
        </block>
        <view class="add_parse_info">
            <van-button 
                plain 
                type="info" 
                size="large"
                block
                bind:click="addOneParse"
            >添加阶段</van-button>
        </view>
    </view>
    <!-- 提交按钮 -->
    <view class="submit_btn">
        <van-button type="info" block square bind:click="handleSubmit">提交</van-button>
    </view>
    <!-- <view class="submit_btn">
        <van-button type="info" block square bind:click="addPhaseBatch">阶段</van-button>
    </view> -->
</view>